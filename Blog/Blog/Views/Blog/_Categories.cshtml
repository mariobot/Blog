@model IList<Blog.Models.Category>

<div class="sidebar-module">
    <h3>Categories</h3>

    @if (Model.Count > 0)
    {
        <ol class="list-unstyled">
            @foreach (var category in Model)
            {
                <li><a asp-controller="Blog" asp-action="Category" asp-route-category="@category.UrlSlug">@category.Name</a></li>
            }
        </ol>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>